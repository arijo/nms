/* SEE US IN ACTION SCREEN STYLES */
.screen.seeusinaction{
    // Width-independent styles:
    .content {
        background-color: transparent;  // Turn this on when styling this section is complete.
        .headline {
            margin-top: 15%;
            .h1 {
                color: #ff8a00;
                padding-top: 10px;
            }
            .h2 {
                color: white;
                padding-bottom: 10px;
            }
        }
        p{
            //color: #6b2e4c;
        }
		.listtrigger{
			position: absolute;
			width: 265px;
			height: 220px;
			text-align: center;
			z-index: 951;	
			//background-image: url(../images/seeusinaction/brands_bug.png);
			background-image: url(../images/seeusinaction/seeusinaction_bubble_sprites.png);
			background-position: -598px -220px;
			.Clickable();
			&.hover{
				//background-image: url(../images/seeusinaction/brands_bug_rollover.png);
				background-position: -598px 0px;
			}
		}
    }
    ul.bubbles {
            .contentbubble01 {
                    width: 220px;
                    height: 220px;
                    background-color: transparent;
                    //background-image: url(../images/seeusinaction/seeusinaction_contentbubble01.png);
		    background-image: url(../images/seeusinaction/seeusinaction_bubble_sprites.png);
		    background-position: -863px -220px;
            }
            .contentbubble02 {
                    width: 257px;
                    height: 257px;
                    background-color: transparent;
                    //background-image: url(../images/seeusinaction/seeusinaction_contentbubble02.png);
		    background-image: url(../images/seeusinaction/seeusinaction_bubble_sprites.png);
		    background-position: 0px -480px;
            }
            .contentbubble03 {
                    width: 220px;
                    height: 220px;
                    background-color: transparent;
                    //background-image: url(../images/seeusinaction/seeusinaction_contentbubble03.png);
		    background-image: url(../images/seeusinaction/seeusinaction_bubble_sprites.png);
		    background-position: -863px 0px;
            }
    }

    // Resposive styles:
    // Portrait phone (yellow mode)
    @media (max-width: 479px){    
        .headline{
            .h1{
                font-size: 14px;
            }
            .h2{
                font-size: 35px;
            }
        }
        .listtrigger{
            margin-top:-40px;
            .Resize(0.65);
        }
    }

    // Landscape phone (red mode)
    @media (min-width: 480px){
        .headline{
            .h1{
                font-size:22px;
            }
            .h2{
                font-size:50px;
            }
        }
        .listtrigger{
            .Resize(0.75);
        }
    }

    // Portrait tablet to landscape tablet/small desktop (green mode)
    @media (min-width: 768px){
        .headline{
            .h1{
                font-size:50px;
            }
            .h2{
                font-size:30px;
            }
        }
        .listtrigger{
            .Resize(1.0);
        }
    }

    // Large desktop (blue mode)
    @media (min-width: 1200px){
        .headline{
            .h1{
                font-size:68px;
            }
            .h2{
                font-size:40px;
            }
        }
    }

    // Huge desktop (grey mode)
    // E.g. on 1080p HDTVs
    @media (min-width: 1900px){
        .headline{
            .h1{
                font-size:90px;
            }
            .h2{
                font-size:46px;
            }
        }
    }
}

/* SEEUSINACTION - ADJUST BUBBLE IMAGES SIZE IN IE7 */
.lt-ie8 {
    .screen.seeusinaction {
	    ul.bubbles {
		    .contentbubble01 {
			    width: 200px;
			    height: 200px;
		    }
		    .contentbubble02 {
			    width: 237px;
			    height: 237px;
		    }
		    .contentbubble03 {
			    width: 200px;
			    height: 200px;
		    }
	    }
     }
}

